<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sup"
    tools:context="AddSupplementActivity">

    <EditText
        android:id="@+id/supplement_supplementType"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_round"
        android:hint="vegan: 1(no),  2(yes)"

        android:inputType="number"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/create_supplement"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imaga"
        app:layout_constraintVertical_bias="0.677" />

    <ImageView
        android:id="@+id/imaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/button_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/edit_round"
         android:color="#7E0404"
        android:textColor="#ff0c35"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/supplement_model"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imaga"
        app:layout_constraintVertical_bias="0.707" />

    <EditText
        android:id="@+id/supplement_model"
        android:background="@drawable/edit_round"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:hint="Name"
        android:inputType="textNoSuggestions"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/supplement_price"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imaga"
        app:layout_constraintVertical_bias="0.375" />

    <EditText
        android:id="@+id/supplement_price"
        android:background="@drawable/edit_round"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Price"
        android:inputType="number"

        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/supplement_supplementType"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imaga"
        app:layout_constraintVertical_bias="0.81" />

    <Button
        android:id="@+id/create_supplement"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round"
        android:text="Add"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackFloatAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_reply_white_48dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>